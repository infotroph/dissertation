month = aug,
affiliation = {WEINHEIM},
keywords = {CARBON-DIOXIDE EVOLUTION, CO2 EFFLUX, COMPARTMENTAL ANALYSIS, DECIDUOUS FOREST, GRAY FOREST SOILS, LOLIUM-PERENNE, MICROBIAL RESPIRATION, NITROGEN CONCENTRATION, RHIZOSPHERE RESPIRATION, ZEA-MAYS L},
language = {English},
read = {Yes},
