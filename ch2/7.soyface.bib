@article{kuzyakov:2005fr,
author = {Kuzyakov, Yakov and Larionova, A A},
title = {{Root and rhizomicrobial respiration: A review of approaches to estimate respiration by autotrophic and heterotrophic organisms in soil}},
journal = {Journal of Plant Nutrition and Soil Science},
