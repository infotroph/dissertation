affiliation = {DORDRECHT},
keywords = {CARBON-DIOXIDE EVOLUTION, climate change, CO2 EFFLUX, DECIDUOUS FOREST FLOOR, GROWN SPRING WHEAT, IN-SITU, ISOTOPIC COMPOSITION, LONG-TERM EXPERIMENTS, OAK FOREST, PINE PLANTATIONS},
