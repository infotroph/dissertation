@article{Matamala:2008fz,
author = {Matamala, Roser R and Jastrow, Julie D and Miller, R Michael and Garten, Charles T},
title = {{Temporal changes in C and N stocks of restored prairie: implications for C sequestration strategies}},
journal = {Ecological Applications},
year = {2008},
volume = {18},
