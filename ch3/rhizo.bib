year = {2005},
volume = {166},
number = {3},
pages = {967--980},
month = mar,
affiliation = {OXFORD},
keywords = {FUNGUS RHIZOCTONIA-SOLANI, IMPREGNATED SOIL, LENGTH DENSITY, MAIZE ZEA-MAYS, NITROGEN CAPTURE, PLANT-ROOTS, SAMPLE PREPARATION, SOIL-STRUCTURE, THIN-SECTION TECHNIQUE, WATER-UPTAKE},
